#!/bin/sh

set -e

case "$1" in
	configure)
		# XXX: Fix ownership
		chown root:root /
		chown root:root /etc
		chown root:root /etc/fstab

		# XXX: Fix capabilities
		if [ -f "/usr/bin/ping" ]; then
			setcap cap_net_raw=ep /usr/bin/ping
		fi
		if [ -f "/usr/bin/mtr-packet" ]; then
			setcap cap_net_raw=ep /usr/bin/mtr-packet
		fi
	;;

	triggered)
		update-m1n1 || echo "m1n1 update failed"
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

#DEBHELPER#

exit 0
